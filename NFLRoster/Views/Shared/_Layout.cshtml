<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.NFL Roster Database</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/CSS/lux.css" rel="stylesheet" />
</head>
<body>
    <div class=" container-fluid row justify-content-center">
        <h1>NFL Roster Database</h1>
    </div>
    <div class="container-fluid row justify-content-center">
        <p>@Html.ActionLink("Players", "Index", "Players")</p>
        <p>-</p>
        <p>@Html.ActionLink("Teams", "Index", "Teams")</p>
    </div>  
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class=" row justify-content-center">
            <p>&copy; @DateTime.Now.Year - Michael Ashley</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
