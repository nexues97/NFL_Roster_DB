@model IEnumerable<NFLRoster.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="row justify-content-center">NFL Teams</h2>

<p class="row justify-content-center">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table row justify-content-center" >
    <tr  style="color: slateblue">
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TeamName }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeamName })
        </td>
    </tr>
}

</table>
